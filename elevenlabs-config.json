{
  "type": "webhook",
  "name": "autoservis-happy-system",
  "description": "Kompletný systém pre Autoservis Happy - automaticky rozpozná či ide o požiadavku na ľudský kontakt alebo rezerváciu termínu a spracuje ju cez príslušný endpoint",
  "disable_interruptions": false,
  "force_pre_tool_speech": "auto",
  "assignments": [],
  "api_schema": {
    "url": "https://autoservishappy-production.up.railway.app/api/unified",
    "method": "POST",
    "path_params_schema": [],
    "query_params_schema": [],
    "request_body_schema": {
      "id": "body",
      "type": "object",
      "description": "Univerzálny systém pre Autoservis Happy",
      "properties": [
        {
          "id": "request_type",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Typ požiadavky: 'human_contact' pre požiadavku o ľudský kontakt, 'booking' pre rezerváciu termínu",
          "dynamic_variable": "",
          "constant_value": "",
          "enum": ["human_contact", "booking"],
          "required": true
        },
        {
          "id": "customer_name",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Meno zákazníka (povinné)",
          "dynamic_variable": "",
          "constant_value": "",
          "enum": null,
          "required": true
        },
        {
          "id": "customer_phone",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Telefónne číslo zákazníka vo formáte +421XXXXXXXXX (povinné)",
          "dynamic_variable": "",
          "constant_value": "",
          "enum": null,
          "required": true
        },
        {
          "id": "booking_action",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "PRVÉ VOLANIE: 'find_next_available' na nájdenie termínu. DRUHÉ VOLANIE: 'book' na vytvorenie rezervácie. Pre human_contact nevyplňuj.",
          "dynamic_variable": "",
          "constant_value": "",
          "enum": ["find_next_available", "book"],
          "required": false
        },
        {
          "id": "service_type",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Typ služby pre booking (napr. 'Výmena oleja', 'Oprava brzd')",
          "dynamic_variable": "",
          "constant_value": "",
          "enum": null,
          "required": false
        },
        {
          "id": "preferred_date",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Preferovaný dátum vo formáte YYYY-MM-DD",
          "dynamic_variable": "",
          "constant_value": "",
          "enum": null,
          "required": false
        },
        {
          "id": "preferred_time",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Preferovaný čas vo formáte HH:MM (8:00-17:00)",
          "dynamic_variable": "",
          "constant_value": "",
          "enum": null,
          "required": false
        },
        {
          "id": "reason",
          "type": "string",
          "value_type": "llm_prompt",
          "description": "Dôvod kontaktu alebo poznámky",
          "dynamic_variable": "",
          "constant_value": "",
          "enum": null,
          "required": false
        }
      ],
      "required": false,
      "value_type": "llm_prompt"
    },
    "request_headers": [
      {
        "type": "value",
        "name": "Content-Type",
        "value": "application/json"
      }
    ],
    "auth_connection": null
  },
  "response_timeout_secs": 30,
  "dynamic_variables": {
    "dynamic_variable_placeholders": {}
  }
}